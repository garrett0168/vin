'use strict';

angular.module('vin.services', []);
angular.module('vin.controllers', []);
angular.module('vin.filters', []);
var vinApp = angular.module('vin', ['ngResource', 'ngRoute', 'ui.bootstrap', 'vin.services', 'vin.controllers', 'vin.filters'])
    .config(['$routeProvider', function($routeProvider, $locationProvider) {
        $routeProvider
            .when('/',     {controller: 'SearchController',    templateUrl: '<%= asset_path("index.html")%>'})
            .when('/vehicles', {controller: 'IndexController',   templateUrl: '<%= asset_path("vehicles/index.html")%>'})
            .when('/vehicles/by_vin/:vin', {controller: 'VehicleController',     templateUrl: '<%= asset_path("vehicles/by_vin.html")%>'})
            .otherwise({redirectTo: '/'});
    }])
    .config(['$httpProvider', function($httpProvider) {
      $httpProvider.defaults.headers.common["X-Requested-With"] = 'XMLHttpRequest';
    }]);;
